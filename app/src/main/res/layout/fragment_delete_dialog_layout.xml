<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/rounded_corner_custom_dialog2">




    <LinearLayout
        android:id="@+id/linear"
        android:layout_width="@dimen/_40sdp"
        android:layout_height="@dimen/_40sdp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/_20sdp"
        android:background="@drawable/round_linear_layout"
        >

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="\?"
            android:gravity="center"
            android:layout_margin="@dimen/_5sdp"
            android:textColor="@color/white"
            android:background="@drawable/circular_textvew_dark"
            android:textSize="@dimen/_18sdp"
            />

    </LinearLayout>


    <TextView
        android:id="@+id/textView4"
        style="@style/TextViewHeading"
        android:layout_below="@id/linear"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_10sdp"
        android:layout_marginLeft="@dimen/_10sdp"
        android:layout_marginRight="@dimen/_10sdp"
        android:text="@string/delete_inst"
        />



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/_40sdp"
        android:layout_below="@+id/textView4"
        android:gravity="center"
        android:layout_marginTop="@dimen/_10sdp"
        android:layout_marginBottom="@dimen/_10sdp"
        android:orientation="horizontal">

        <Button
            android:id="@+id/buttonCancel"
            style="@style/MaterialButtonStyle"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="@dimen/_40sdp"
            android:text="@string/cancel"
            android:textColor="@color/white"
            android:textAllCaps="false"
            android:layout_marginRight="@dimen/_5sdp"
            android:layout_marginLeft="@dimen/_10sdp"
            />


        <Button
            android:id="@+id/buttonConfirm"
            style="@style/MaterialButtonHeading7"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="@dimen/_40sdp"
            android:text="@string/confirm"
            android:textColor="@color/white"
            android:textAllCaps="false"
            android:layout_marginRight="@dimen/_10sdp"
            android:layout_marginLeft="@dimen/_5sdp"

            />

    </LinearLayout>



</RelativeLayout>